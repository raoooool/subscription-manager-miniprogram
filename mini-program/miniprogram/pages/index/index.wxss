page {
  padding: 32rpx 28rpx 48rpx;
}

.page {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero {
  padding: 32rpx 28rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #0f172a, #1f2937 70%, #111827);
  color: #f8fafc;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.25);
}

.eyebrow {
  font-size: 26rpx;
  letter-spacing: 2rpx;
  text-transform: uppercase;
  opacity: 0.7;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
}

.subtitle {
  font-size: 28rpx;
  line-height: 1.6;
  opacity: 0.9;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.12);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 28rpx;
  color: #334155;
}
