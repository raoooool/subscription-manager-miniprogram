/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 顶部导航栏样式 */
.nav-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 100;
}

/* 为固定定位的导航栏预留空间 */
page {
  padding-top: calc(var(--status-bar-height) + 88rpx);
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-container {
  display: flex;
  gap: 20rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.tab {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.tab.active {
  background: #007aff;
  color: white;
  width: 200rpx;
  text-align: center;
}

/* 消费统计样式 */
.spending-container {
  padding: 40rpx 30rpx;
}

.spending-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.spending-amount {
  font-size: 60rpx;
  font-weight: bold;
  display: flex;
  align-items: baseline;
}

.spending-amount .dollar {
  font-size: 48rpx;
  margin-right: 4rpx;
}

.spending-amount .whole {
  font-size: 60rpx;
}

.spending-amount .decimal {
  color: #999;
  font-size: 48rpx;
  margin-left: 2rpx;
}

/* 主要内容卡片样式 */
.main-card {
  margin: 30rpx;
  background: white;
  border-radius: 30rpx 30rpx 0 30rpx;
  min-height: 400rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.card-left {
  width: 25%;
  aspect-ratio: 1;
}

.service-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #1db954; /* Spotify 绿色 */
}

.card-right {
  padding-top: 20rpx;
}

.amount {
  font-size: 48rpx;
  font-weight: bold;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.payment-info {
  font-size: 24rpx;
  color: #666;
}

.arrow-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.arrow-button .iconfont {
  font-size: 32rpx;
  color: #333;
}

/* 支付历史部分样式 */
.history-section {
  padding: 30rpx;
}

.history-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.history-list {
  background: white;
  border-radius: 30rpx;
  padding: 20rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.history-item:last-child {
  margin-bottom: 0;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-right: 20rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.item-time {
  font-size: 24rpx;
  color: #666;
}

.item-amount {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
